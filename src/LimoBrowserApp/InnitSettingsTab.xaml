                    </Button>
                    <Button x:Name="themeCard16" Height="45px" Width="45px" Grid.Column="15" Style="{StaticResource themeSelectorStyle}" Background="Lime" BorderBrush="Black" Click="SetBGreTheme">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15px" />
                                <RowDefinition Height="30px" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="B+Gre" Grid.Row="0" HorizontalAlignment="Center"/>
                        </Grid>
                    </Button>
                    <Button x:Name="themeCard17" Height="45px" Width="45px" Grid.Column="16" Style="{StaticResource themeSelectorStyle}" Background="Aquamarine" BorderBrush="Black" Click="SetBAmarTheme">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15px" />
                                <RowDefinition Height="30px" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="B+Ama" Grid.Row="0" HorizontalAlignment="Center"/>
                        </Grid>
                    </Button>
                    <Button x:Name="themeCard18" Height="45px" Width="45px" Grid.Column="17" Style="{StaticResource themeSelectorStyle}" Background="Cyan" BorderBrush="Black" Click="SetBCyaTheme">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15px" />
                                <RowDefinition Height="30px" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="B+Cya" Grid.Row="0" HorizontalAlignment="Center"/>
                        </Grid>
                    </Button>
                    <Button x:Name="themeCard19" Height="45px" Width="45px" Grid.Column="18" Style="{StaticResource themeSelectorStyle}" Background="LightBlue" BorderBrush="Black" Click="SetBLBlTheme">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15px" />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="B+LBl" Grid.Row="0" HorizontalAlignment="Center"/>
                        </Grid>
                    </Button>
                    <Button x:Name="themeCard20" Height="45px" Width="45px" Grid.Column="19" Style="{StaticResource themeSelectorStyle}" Background="Blue" BorderBrush="Black" Click="SetBBluTheme">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15px" />
                                <RowDefinition Height="30px" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="B+Blue" Grid.Row="0" HorizontalAlignment="Center"/>
                        </Grid>
                    </Button>
                    <Button x:Name="themeCard21" Height="45px" Width="45px" Grid.Column="20" Style="{StaticResource themeSelectorStyle}" Background="DarkOrchid" BorderBrush="Black" Click="SetBPurTheme">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15px" />
