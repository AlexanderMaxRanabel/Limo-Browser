                    </Button>
                    <Button x:Name="themeCard10" Height="45px" Width="45px" Grid.Column="9" Style="{StaticResource themeSelectorStyle}" Background="DarkOrchid" BorderBrush="Purple" Click="SetPurpleTheme">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15px" />
                                <RowDefinition Height="30px" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="Purple" Grid.Row="0" HorizontalAlignment="Center"/>
                        </Grid> 
                    </Button>
                    <Button x:Name="themeCard11" Height="45px" Width="45px" Grid.Column="10" Style="{StaticResource themeSelectorStyle}" Background="Violet" BorderBrush="HotPink" Click="SetPinkTheme">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15px" />
                                <RowDefinition Height="30px" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="Pink" Grid.Row="0" HorizontalAlignment="Center"/>
                        </Grid>
                    </Button>
                    <Button x:Name="themeCard12" Height="45px" Width="45px" Grid.Column="11" Style="{StaticResource themeSelectorStyle}" Background="Red" BorderBrush="Black" Click="SetBRedTheme">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15px" />
                                <RowDefinition Height="30px" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="B+Red" Grid.Row="0" HorizontalAlignment="Center"/>
