<UserControl x:Class="LimoBrowserApp.InnitSettingsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LimoBrowserApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="themeSelectorStyle" TargetType="Button">
            <Setter Property="BorderThickness" Value="4px" />
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10" />
                </Style>
            </Style.Resources>
        </Style>
    </UserControl.Resources>
    <StackPanel x:Name="settingsContainer">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="def1" />
                <ColumnDefinition x:Name="def2" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Theme:" Grid.Column="0" Height="45px"/>
            <ScrollViewer x:Name="themebar" Grid.Column="1" Height="45px">
                <Grid x:Name="themeSelector" Height="45px" Background="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="45px" />
                        <ColumnDefinition Width="45px" />
                        <ColumnDefinition Width="45px" />
                        <ColumnDefinition Width="45px" />
                        <ColumnDefinition Width="45px" />
                        <ColumnDefinition Width="45px" />
                        <ColumnDefinition Width="45px" />
                        <ColumnDefinition Width="45px" />
                        <ColumnDefinition Width="45px" />
                        <ColumnDefinition Width="45px" />
                        <ColumnDefinition Width="45px" />
                        <ColumnDefinition Width="45px" />
                        <ColumnDefinition Width="45px" />
                        <ColumnDefinition Width="45px" />
                        <ColumnDefinition Width="45px" />
                        <ColumnDefinition Width="45px" />
                        <ColumnDefinition Width="45px" />
                        <ColumnDefinition Width="45px" />
                        <ColumnDefinition Width="45px" />
                        <ColumnDefinition Width="45px" />
                        <ColumnDefinition Width="45px" />
                        <ColumnDefinition Width="45px" />
                        <ColumnDefinition Width="45px" />
                        <ColumnDefinition Width="45px" />
                        <ColumnDefinition Width="45px" />
                        <ColumnDefinition Width="45px" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="themeCard" Height="45px" Width="45px" Grid.Column="0" Style="{StaticResource themeSelectorStyle}" Background="Red" BorderBrush="DarkRed" Click="SetRedTheme">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15px" />
                                <RowDefinition Height="30px" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="Red" Grid.Row="0" HorizontalAlignment="Center"/>
                        </Grid>
                    </Button>
                    <Button x:Name="themeCard2" Height="45px" Width="45px" Grid.Column="1" Style="{StaticResource themeSelectorStyle}" Background="Orange" BorderBrush="DarkOrange" Click="SetOrangeTheme">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15px" />
                                <RowDefinition Height="30px" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="Orange" Grid.Row="0" HorizontalAlignment="Center"/>
                        </Grid>
                    </Button>
                    <Button x:Name="themeCard3" Height="45px" Width="45px" Grid.Column="2" Style="{StaticResource themeSelectorStyle}" Background="Yellow" BorderBrush="Gold" Click="SetYellowTheme">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15px" />
                                <RowDefinition Height="30px" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="Yellow" Grid.Row="0" HorizontalAlignment="Center"/>
                        </Grid>
                    </Button>
                    <Button x:Name="themeCard4" Height="45px" Width="45px" Grid.Column="3" Style="{StaticResource themeSelectorStyle}" Background="GreenYellow" BorderBrush="YellowGreen" Click="SetYGreenTheme">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15px" />
                                <RowDefinition Height="30px" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="YGreen" Grid.Row="0" HorizontalAlignment="Center"/>
                        </Grid>
                    </Button>
                    <Button x:Name="themeCard5" Height="45px" Width="45px" Grid.Column="4" Style="{StaticResource themeSelectorStyle}" Background="Lime" BorderBrush="DarkGreen" Click="SetGreenTheme">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15px" />
                                <RowDefinition Height="30px" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="Green" Grid.Row="0" HorizontalAlignment="Center"/>
                        </Grid>
                    </Button>
                    <Button x:Name="themeCard6" Height="45px" Width="45px" Grid.Column="5" Style="{StaticResource themeSelectorStyle}" Background="Aquamarine" BorderBrush="CadetBlue" Click="SetAmariTheme">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15px" />
                                <RowDefinition Height="30px" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="Amari" Grid.Row="0" HorizontalAlignment="Center"/>
                        </Grid>
                    </Button>
                    <Button x:Name="themeCard7" Height="45px" Width="45px" Grid.Column="6" Style="{StaticResource themeSelectorStyle}" Background="Cyan" BorderBrush="DarkCyan" Click="SetCyanTheme">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15px" />
                                <RowDefinition Height="30px" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="Cyan" Grid.Row="0" HorizontalAlignment="Center"/>
                        </Grid>
                    </Button>
                    <Button x:Name="themeCard8" Height="45px" Width="45px" Grid.Column="7" Style="{StaticResource themeSelectorStyle}" Background="LightBlue" BorderBrush="LightSkyBlue" Click="SetLBlueTheme">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15px" />
                                <RowDefinition Height="30" />
